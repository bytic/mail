{
  "name": "bytic/mail",
  "description": "Php Framework",
  "license": "MIT",
  "type": "library",
  "authors": [
    {
      "name": "Gabriel Solomon",
      "email": "hello@gabrielsolomon.ro"
    }
  ],
  "homepage": "https://github.com/bytic/mail",
  "require": {
    "php": "^7.4 || ^8.0",
    "ext-json": "*",
    "bytic/config": "^0.9 || ^1.0",
    "bytic/container": "^0.9 || ^1.0 || ^2.0",
    "bytic/utility": "^1.0",
    "symfony/http-client": "^5.0 || ^6.0",
    "symfony/mailer": "^5.0 || ^6.0",
    "html2text/html2text": "^4.3"
  },
  "require-dev": {
    "bytic/database": "^0.9 || ^1.0",
    "bytic/orm": "^0.9 || ^1.0",
    "bytic/phpqatools": "^1.0.8",
    "sendgrid/sendgrid": "^7.0||^8.0",
    "symfony/amazon-mailer": "^5.0 || ^6.0"
  },
  "suggest": {
    "sendgrid/sendgrid": "^7.0||^8.0",
    "symfony/amazon-mailer": "^5.0 || ^6.0"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Nip\\Mail\\": "src"
    },
    "classmap": [
      "_legacy"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Nip\\Mail\\Tests\\": "tests/src",
      "Nip\\Mail\\Tests\\Fixtures\\": "tests/fixtures"
    }
  },
  "config": {
    "allow-plugins": {
      "phpstan/extension-installer": true,
      "ergebnis/composer-normalize": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "bytic/phpqatools": true
    }
  }
}
